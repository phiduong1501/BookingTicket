
@{
    ViewBag.Title = "Danh sách đón - trả";
}

@Html.Partial("_Header")

<div id="page-wrapper">
    <div ng-controller="PayBackController" ng-init="Init()" class="col-xs-12">
        @Html.Partial("_ActionTicket")
        @Html.Partial("_CarInfo")
        <div>
            DANH SÁCH ĐÓN DỌC ĐƯỜNG
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr class="table-header">
                        <th>STT</th>
                        <th>Địa chỉ đón</th>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Số ghế</th>
                        <th>Ghi chú</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="pickUp in listPickUp">
                        <td><input style="padding: 5px 5px 5px 11px;font-weight: bold;width: 34px;" ng-model="pickUp.OrderPickup" /> </td>
                        <td>{{pickUp.Address}}</td>
                        <td>{{pickUp.PassengerName}}</td>
                        <td>{{pickUp.Mobile}}</td>
                        <td>{{pickUp.Descriptions}}</td>
                        <td>{{pickUp.Note}}</td>
                        <td>{{pickUp.SumPrice | currency : "" : 0 }}đ</td>
                        <td>{{pickUp.StatusName}}</td>
                    </tr>
                    <tr>
                        <td colspan="5" class="text-right text-red">
                            Tổng cộng
                        </td>
                        <td class="text-red">{{TotalPrice | currency : "" : 0}} đ</td>
                        <td colspan="2"></td>
                    </tr>
                    <tr>
                        <td colspan="8">
                            <kendo-button class="k-warning" ng-click="SaveOrderIndex()">Lưu sắp xếp</kendo-button>
                            <kendo-button ng-click="PrintPayback()" class="k-primary" icon="'k-icon k-i-print'">In danh sách</kendo-button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div>
            DANH SÁCH TRẢ KHÁCH
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr class="table-header">
                        <th>STT</th>
                        <th>Địa chỉ đón</th>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Số ghế</th>
                        <th>Ghi chú</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @*<tr ng-repeat="seat in lstseats">
                        <td>{{seat.Description}}</td>
                        <td>{{seat.Description}}</td>
                        <td>{{seat.Description}}</td>
                        <td>{{seat.Description}}</td>
                        <td>{{seat.Description}}</td>
                        <td>{{seat.Description}}</td>
                        <td>{{seat.Description}}</td>
                        <td>{{seat.Description}}</td>
                    </tr>*@
                    <tr>
                        <td colspan="5" class="text-right">
                            Tổng cộng
                        </td>
                        <td></td>
                        <td colspan="2"></td>
                    </tr>
                    <tr>
                        <td colspan="8">
                            <kendo-button class="k-warning">Lưu sắp xếp</kendo-button>
                            <kendo-button class="k-primary" icon="'k-icon k-i-print'">In danh sách</kendo-button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


